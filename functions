exec_scripts() {
    SCRIPT_DIR=$1
    [ -d $SCRIPT_DIR ] || return 0
    for SCRIPT in $(find $SCRIPT_DIR -type f); do
        [ -x $SCRIPT ] || return 0
        echo "Executing: $SCRIPT"
        $SCRIPT
    done
    return 0
}

set_firstboot_status() {
    STATUS=$1
    CONF=/etc/default/inithooks
    sed -i "s|RUN_FIRSTBOOT=\(.*\)|RUN_FIRSTBOOT=$STATUS|" $CONF
}

